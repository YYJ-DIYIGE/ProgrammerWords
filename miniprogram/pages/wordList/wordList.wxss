.container{
  height: 100%;
  box-sizing: border-box;
}
.word-list{
  width: 100%;
}
.word-item{
  font-family: Arial, Helvetica, sans-serif;
  font-size: 30rpx;
  border-bottom: 2rpx solid #F6F6F6;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  letter-spacing: 3rpx;
}
.front-container{
  width: 100%;
  height: 100rpx;
  position: relative;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  animation: trunFront 1s ease;
}
@keyframes trunFront{
  from {opacity: 0;}
  to {opacity: 1;}
}
.front-info-container{
  display: flex;
  align-items: center;
}
.item-index,.item-name{
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #4D4D4D;
  margin-right: 20rpx;
  letter-spacing: 0;
  line-height: 22px;
}
.item-pronunciation{
  font-family: PingFangSC-Semibold;
  font-size: 14px;
  color: rgb(130, 130, 130);
  letter-spacing: 0;
}
.horn-container,.bg-detail{
  width: 134rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
  padding-right: 30rpx;
  justify-content: flex-end;
}
.horn{
  width: 24rpx;
  height: 18rpx;
}
.bg-color-container{
  width: 100%;
  height: 100rpx;
  padding: 0 0 0 30rpx;
  background-color: rgb(163,183,203);
  animation: trunBack 1s ease;
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  letter-spacing: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bg-color{
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
@keyframes trunBack{
  from {background-color: #fff;}
  to {background-color: rgb(163,183,203);}
}
.item-back{
  width: 540rpx;
  height: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #fff;
}
.item-back text{
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  letter-spacing: 0;
  color: #E2E2E2;
}
.detail{
  width: 20rpx;
  height: 22rpx;
}
.add-btn{
  text-align: center;
  margin: 50rpx 0 ;
}
.add-img{
  width: 105rpx;
  height: 100rpx;
}
.add-text{
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #848484;
  letter-spacing: 0;
}